{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": ".",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@alias/*": [
        "src/*"
      ]
    },
    "sourceMap": true,
    "noUncheckedIndexedAccess": false,
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2022"
    ]
  },
  "ts-node": {
    "swc": false,
    "esm": false
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}